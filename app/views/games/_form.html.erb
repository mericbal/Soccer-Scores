<%= form_for @game do |f| %>
	
	<div class="row">

    <div class="col-sm-4 col-xs-12">
      <div class="panel panel-default text-center">
        <div class="panel-heading">
          <h1> <%= f.label 'Hometeam' %> </h1>
        </div>
        <div class="panel-body">
        	<% User.all.each do |u| %>
        		<li id="green"> 
							<i id="i1"> <%= f.label "#{u.username}" %> </i>
							<i> <%= f.radio_button :home, "#{u.id}", required: true, id: 'radio1' %> </i>
						</li>
        	<% end %>
        </div>
      </div>      
    </div>     
    
    <div class="col-sm-4 col-xs-12">
      <div class="panel panel-default text-center">
        <div class="panel-heading">
          <h1>Awayteam</h1>
        </div>
        <div class="panel-body">
          <% User.all.each do |u| %>
						<li id="red"> 
							<%= f.label "#{u.username}" %>
							<%= f.radio_button :away, "#{u.id}", required: true %>
						</li>
					<% end %>
        </div>
      </div>      
    </div>       

    <div class="col-sm-4 col-xs-12">
      <div class="panel panel-default text-center">
        <div class="panel-heading">
          <h1>Score ?</h1>
        </div>
        <div class="panel-body">
        	<li id="green"> 
        	<%= f.label 'Home', id: 'tar1' %>
          <span id="val1"></span>
          <%= f.range_field :homegoal, in: 0..17, id: 'slider1' %>
          </li>
          <li id="red">          	
        	<%= f.label 'Away' %>
          <span id="val2"></span>
					<%= f.range_field :awaygoal, in: 0..17, id: 'slider2' %>
          </li>
        </div>
      </div>      
    </div>       

  </div> <!-- row -->

	<p> <%= f.submit 'Save match', class: 'btn-lg btn-primary btn-block button4' %> </p>

<% end %> <!-- form end -->
