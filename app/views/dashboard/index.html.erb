<div class="container-fluid" id="dashboard">

	<%= link_to '< back', :back, class: 'btn btn-primary' %>

	<h1 class="text-center white"> <i id="tema"> <%= current_user.username %>'s</i> dashboard </h1>
		<br>
		<br>

	<div class="row">
	
		<div class="col-sm-3 col-xs-12 opaq">
	    <div class="panel panel-default text-center">
	      
	      <div class="panel-heading">
	        <h3>Games</h3>
	      </div>
	      
	      <div class="panel-body">
	        <p><strong id="blue"> <%= current_user.games.count %></strong> total games played </p>
	        <p><strong id="green"> <%= current_user.homegames.count %></strong> home games </p>
	        <p><strong id="red"> <%= current_user.awaygames.count %></strong> away games </p>
	    	</div> <!-- panel body -->

	    	<div class="panel-footer">
	    		<%= link_to 'all games', all_played_games_path, class: 'btn' %>
	    	</div>

	  	</div>
		</div>

		<div class="col-sm-3 col-xs-12 opaq">
	    <div class="panel panel-default text-center">
	      
	      <div class="panel-heading">
	        <h3>Scores</h3>
	      </div>

	      <div class="panel-body">
	      	<p><strong id="green"> <%= current_user.wins? %></strong> wins </p>
	        <p><strong id="orange"> <%= current_user.draws? %></strong> draws </p>
	        <p><strong id="red"> <%= current_user.lost? %></strong> lost </p>
	      </div>

	    </div> <!-- panel -->
	  </div> <!-- col -->


	  <div class="col-sm-3 col-xs-12 opaq">
	    <div class="panel panel-default text-center">
	      
	      <div class="panel-heading">
	        <h3>Points &amp; Goals</h3>
	      </div>

	      <div class="panel-body">
	      	<p> points : <strong id="blue"> <%= current_user.points %> </strong></p>
      		<p> goals scored : <strong id="green"> <%= current_user.goals_s %> </strong></p>
      		<p> goals against : <strong id="red"> <%= current_user.goals_a %> </strong></p>
	      </div>

	    </div> <!-- panel -->
	  </div> <!-- col -->


	  <div class="col-sm-3 col-xs-12 opaq">
	    <div class="panel panel-default text-center">
	      
	      <div class="panel-heading">
	        <h3>Teams</h3>
	      </div>    

	      <div class="panel-body">
	      	<p> Your favorite teams : <i id="blue"> <%= current_user.favs.count %> </i></p>
	      	<% current_user.favs.each do |t| %>
						<li > <%= Team.find(t).name %> </li>
					<% end %>
	      </div>

	    </div> <!-- panel -->
	  </div> <!-- col -->

	</div> <!-- row -->


	<div class="row">
		
		<div class="col-sm-12 col-xs-12 opaq">
	    <div class="panel panel-default text-center">
	      
	      <div class="panel-heading">
					<h3 class="text-center"> <i id="green"> Win </i> , <i id="orange"> draw </i> , <i id="red"> lost </i> % </h3>
	      </div>
	      
	      <div class="panel-body">
		      <div class="progress" style="height: 25px;">
						<div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" style="width: <%= current_user.percent(current_user.wins?) %>%;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"> % <%= current_user.percent(current_user.wins?) %> </div>
					  <div class="progress-bar progress-bar-warning progress-bar-striped active" role="progressbar" style="width: <%= current_user.percent(current_user.draws?) %>%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"> % <%= current_user.percent(current_user.draws?) %> </div>
					  <div class="progress-bar progress-bar-danger progress-bar-striped active" role="progressbar" style="width: <%= current_user.percent(current_user.lost?) %>%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"> % <%= current_user.percent(current_user.lost?) %> </div>
					</div>
	    	</div> <!-- panel body -->
	  	</div>
		</div>
	
	</div> <!-- row -->

</div> <!-- cont -fluid -->